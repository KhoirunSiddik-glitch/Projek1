<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/ivRS"
            android:onClick="clickRS"
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/hospital_icon" />

        <ImageView
            android:id="@+id/ivPLC"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/police_icon" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/ivMarket"
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/market_icon" />

        <ImageView
            android:id="@+id/ivKnwldg"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/knowledge_icon" />
    </TableRow>

</LinearLayout>